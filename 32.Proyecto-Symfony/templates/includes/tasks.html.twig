 
{% if (tasks|length >= 1) %}
    <div class="example-wrapper">
        <h2>Todas las tareas</h2>
        <table>
            <tr>
                <th>Tarea</th>
                <th>Prioridad</th>
                <th>Horas Presupuestadas</th>
                <th>Acciones</th>
            </tr>
            {% for task in tasks %}
                <tr>
                    <td>{{task.title}}</td>
                    <td>
                    {% if task.priority =="high" %}
                                {{ 'Alta'}}
                    {% elseif task.priority =="medium" %}
                                {{ 'Media' }}
                    {% elseif task.priority =="low" %}
                                {{ 'Baja' }}                      
                    {% endif %}
    
                    </td>
                    <td>{{task.hours}}</td>
                    <td class="buttons">
                        <a href="{{ path('task_detail',{'id':task.id}) }}" class="btn-show">Ver</a>         
                        {% if task.user.id == app.user.id %}
                            <a href="{{ path('task_edit',{'id':task.id}) }}" class="btn-update">Editar</a>
                            <a href="{{ path('task_delete',{'id':task.id}) }}" class="btn-delete">Eliminar</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="example-wrapper">
        <h2>No has creado a√∫n ninguna tarea</h2>
    </div>    
{% endif %}